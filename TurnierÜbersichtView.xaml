<UserControl x:Class="Turnierplaner.TurnierÜbersichtView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="20">
        <TabControl x:Name="TurnierTabs">
            <!-- Tab 1: Gruppeneinteilung -->
            <TabItem Header="Gruppeneinteilung">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <TextBlock Text="Gruppeneinteilung (Wird übernommen oder eingebettet)" />
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Vorrunden -->
            <TabItem Header="Vorrunden">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <TextBlock Text="Spielplan Vorrunden kommt hier hin." />
                </ScrollViewer>
            </TabItem>

            <!-- Tab 3: Platzierung & Halbfinale -->
            <TabItem Header="Platzierung &amp; Halbfinale">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <TextBlock Text="Platzierungsspiele und Halbfinale folgen." />
                </ScrollViewer>
            </TabItem>

            <!-- Tab 4: Finale & Spiel um Platz 3 -->
            <TabItem Header="Finale &amp; Spiel um Platz 3">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <TextBlock Text="Finalspiele und Spiel um Platz 3 hier anzeigen." />
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
